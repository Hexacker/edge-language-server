{
  "name": "edge-language-server",
  "version": "1.5.9",
  "description": "A language server for the Edge templating engine.",
  "main": "out/server.js",
  "files": [
    "out/**/*",
    "wasm/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node out/server.js --stdio",
    "dev": "ts-node src/server.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hexacker/edge-language-server.git"
  },
  "keywords": [
    "edge",
    "adonisjs",
    "language-server"
  ],
  "author": "Abdelmadjid Cherfaoui",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "prettier-plugin-edgejs": "^1.0.6",
    "typescript": "^5.9.3",
    "vscode-css-languageservice": "^6.3.7",
    "vscode-html-languageservice": "^5.5.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.5",
    "typescript-eslint": "^7.13.0"
  }
}
